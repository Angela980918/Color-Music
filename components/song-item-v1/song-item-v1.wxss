/* components/song-item-v1/song-item-v1.wxss */
.song-item{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 16rpx 0;
}

.song-item .pic{
  width: 120rpx;
  height: 120rpx;
  border-radius: 6px;
}

.img{
  width: 100%;
  height: 100%;
  border-radius: 6px;
}

.left{
  display: flex;
}

.center{
  flex: 1;
  height: 100%;
}

.center .info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0 30rpx;
}

.info .source{
  font-size: 13px;
  color: #888;
}

.right{
  width: 50rpx;
  height: 50rpx;
}