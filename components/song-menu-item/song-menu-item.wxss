/* components/song-menu-item/song-menu-item.wxss */
.menu-item{
  display: inline-block;
  width: 100%;
  border-radius: 4px;
}

.pic{
  position: relative;
}

.pic .img{
  width: 100%;
  border-radius: 12rpx;
  background-size: cover;
}

.pic .count{
  position: absolute;
  right: 0;
  bottom: 10rpx;
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 10rpx;
  background: rgba(0,0,0, .5);
}

.title{
  width: 100%;
  font-size: 26rpx;

  /* 显示两行 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: pre-wrap;
}