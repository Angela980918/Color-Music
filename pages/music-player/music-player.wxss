/* pages/music-player/music-player.wxss */
.bg-image, .bg-cover{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: -1;
}

.bg-cover{
  background-color: rgba(0,0,0,.3);
  backdrop-filter: blur(20px);
}

/* 标题 */
.tab {
  display: flex;
  font-size: 24rpx;
  color: #aaa;
}

.tab .divider {
  margin: 0 8rpx;
}

.tab .active {
  color: #fff;
}